@{
    ViewData["Title"] = "Delete Meal Plan";
}

<h1>Delete Meal Plan</h1>

@if (ViewData["DeleteMealPlanMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @ViewData["DeleteMealPlanMessage"]
    </div>
}

<p>Are you sure you want to delete this meal plan?</p>

<div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="MealPlans" class="btn btn-secondary">Cancel</a>
    </form>
</div>
