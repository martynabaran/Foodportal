@{
    ViewData["Title"] = "Delete Recipe";
}

<h1>Delete Recipe</h1>

@if (ViewData["DeleteRecipeMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @ViewData["DeleteRecipeMessage"]
    </div>
}

<p>Are you sure you want to delete this recipe?</p>

<div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ListMyRecipes" class="btn btn-secondary">Cancel</a>
    </form>
</div>
